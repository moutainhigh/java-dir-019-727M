<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:maxHeight="1500dp"
            android:maxWidth="1000dp"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#90000000" />

        <RelativeLayout
            android:id="@+id/rootView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/chat_rtc_voice_initiate_avatar_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/chat_rtc_voice_initiate_textUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/chat_rtc_voice_initiate_avatar_img"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:text="朱楠"
                android:textColor="#ffffff"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/chat_rtc_voice_initiate_textstatue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/chat_rtc_voice_initiate_textUserName"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:text="等待对方接听....."
                android:textColor="#ffffff"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/layoutMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/chat_rtc_voice_initiate_mute_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="18dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="68dp"
                        android:layout_height="68dp"
                        android:src="@mipmap/chat_rtc_voice_mute_img_normal" />

                    <TextView
                        android:id="@+id/chat_rtc_voice_initiate_mute_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingTop="12dp"
                        android:text="静音"
                        android:textColor="#ffffff"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/chat_rtc_voice_initiate_hang_up_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="68dp"
                        android:layout_height="68dp"
                        android:background="@drawable/img_bg_guaduan_call"
                        android:src="@mipmap/chat_rtc_voice_close_img_normal" />

                    <TextView
                        android:id="@+id/chat_rtc_voice_initiate_hang_up_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingTop="12dp"
                        android:text="挂断"
                        android:textColor="#ffffff"
                        android:textSize="12dp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/chat_rtc_voice_initiate_hands_free_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="68dp"
                        android:layout_height="68dp"
                        android:src="@mipmap/chat_rtc_voive_hands_free_img_normal" />

                    <TextView
                        android:id="@+id/chat_rtc_voice_initiate_hands_free_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingTop="12dp"
                        android:text="免提"
                        android:textColor="#ffffff"
                        android:textSize="12dp" />
                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/chat_rtc_voice_initiate_textTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/layoutMenu"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="26dp"
                android:text="30:22"
                android:textColor="#ffffff"
                android:textSize="16dp" />

        </RelativeLayout>

</FrameLayout>
