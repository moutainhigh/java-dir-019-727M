<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wheat"
    android:orientation="vertical" >
    <ImageView
        android:id="@+id/chat_rtc_voice_initiate_avatar_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/chat_rtc_voice_initiate_textUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chat_rtc_voice_initiate_avatar_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:text="朱楠"
        android:textColor="#ffffff"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/chat_rtc_voice_initiate_textstatue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chat_rtc_voice_initiate_textUserName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:text="邀请您进行语音通话..."
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp">
        <!--接听和挂断-->
        <RelativeLayout
            android:id="@+id/callkit_callhang_up_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="72.5dp">

            <ImageView
                android:id="@+id/rc_voip_call_hang_up"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/rc_voip_hangup_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rc_voip_call_hang_up"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                style="@style/rc_voip_text_style_style"
                android:text="@string/rc_voip_hangup" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rc_voip_call_answer_rel"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="72.5dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/rc_voip_call_answer_btn"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/rc_voip_audio_answer_selector"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rc_voip_call_answer_btn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="@string/rc_voip_answer"
                style="@style/rc_voip_text_style_style" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>

